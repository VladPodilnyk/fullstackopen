{
  "name": "backend",
  "version": "1.0.0",
  "main": "index.js",
  "author": "Vlad Podilnyk",
  "license": "MIT",
  "scripts": {
    "start": "node index.js",
    "dev": "nodemon index.js",
    "build:ui": "rm -rf build && cd ../phonebook && yarn build && cp -r dist ../backend/build",
    "environment": "fly secrets set $(grep -v '^#' .env | head -n 1)",
    "deploy": "fly deploy",
    "deploy:clean": "yarn build:ui && yarn environment && yarn deploy",
    "deploy:full": "yarn build:ui && yarn deploy",
    "lint": "eslint .",
    "test": "jest --verbose"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "mongoose": "^6.7.3",
    "morgan": "^1.10.0"
  },
  "devDependencies": {
    "eslint": "^8.28.0",
    "jest": "^29.3.1",
    "nodemon": "^2.0.20"
  },
  "jest": {
    "testEnvironment": "node"
  }
}
